@page
@model RicetteDB.Pages.Articoli.CreateModel
@{
     ViewData["Title"] = "Create Page";
 }
<div class="text-center">
    <h1 class="display-4">Creazione Articolo</h1>
    <form method="post" class="card p-3">
        <div class="row">
            <div asp-validation-summary="All"></div>
        </div>
        <div class="mb-0 align-middle">
            <label class="col-form-label" asp-for="NewArticolo.Articolo">Articolo:</label>
            <input class="me-3" type="text" asp-for="NewArticolo.Articolo"/>
            <label class="col-form-label" asp-for="NewArticolo.Note">Note:</label>
            <textarea class="me-3" asp-for="NewArticolo.Note"></textarea>
            <button class="btn btn-primary" type="submit">Aggiungi</button>
        </div>
    </form>
</div>